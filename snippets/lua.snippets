snippet #!
	#!/usr/bin/env lua
	$1
snippet loc
	local ${1:var} = ${2:1}
snippet if
	if ${1:condition} then
		${2:-- body}
	end${3}
snippet elseif
	elseif (${1:condition}) then
		${2:-- body}
snippet fun
	function ${1:name}(${2:...})
		${3:-- body}
	end
snippet for
	for ${1:i}=${2:1},${3:10} do
		${4:print(i)}
	end
snippet forp
	for ${1:k},${2:v} in pairs(${3:table}) do
	   ${4:-- body}
	end
snippet fori
	for ${1:i},${2:v} in ipairs(${3:table_name}) do
	   ${4:-- body}
	end
